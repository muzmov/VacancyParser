<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>net.kuryshev.filter.RoleFilter</filter-class>
    </filter>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin_parse.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>net.kuryshev.controller.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>net.kuryshev.controller.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProxyController</servlet-name>
        <url-pattern>/proxy.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProxyController</servlet-name>
        <servlet-class>net.kuryshev.controller.ProxyController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/search.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>net.kuryshev.controller.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProgressController</servlet-name>
        <url-pattern>/progress.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProgressController</servlet-name>
        <servlet-class>net.kuryshev.controller.ProgressController</servlet-class>
    </servlet>
    <listener>
        <listener-class>net.kuryshev.listener.SessionCounter</listener-class>
    </listener>
</web-app>
